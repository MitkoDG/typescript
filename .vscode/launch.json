{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript",
      "program": "${file}",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}"
      
    }
  ],
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
